<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BusinessName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBusinessName</item>
        <item name="android:textSize">@dimen/business_name_textsize</item>
        <item name="android:background">@color/colorBackgroundWhite</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/tv_normal_margin</item>
        <item name="android:paddingTop">@dimen/tv_small_padding</item>
        <item name="android:paddingLeft">@dimen/tv_normal_padding</item>
        <item name="android:paddingRight">@dimen/tv_normal_padding</item>
    </style>

    <style name="MainPicture">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="LeadText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorNormalText</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:background">@color/colorBackgroundLight</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/tv_large_padding</item>
        <item name="android:paddingBottom">@dimen/tv_large_padding</item>
    </style>

    <style name="VisualsTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorNormalText</item>
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/tv_xl_padding</item>
        <item name="android:paddingBottom">@dimen/tv_large_padding</item>
    </style>

    <style name="PictureLeft">
        <item name="android:layout_width">@dimen/width_zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginLeft">@dimen/iv_normal_margin</item>
        <item name="android:layout_marginRight">@dimen/iv_small_margin</item>
    </style>

    <style name="PictureRight" parent="PictureLeft">
        <item name="android:layout_marginLeft">@dimen/iv_small_margin</item>
        <item name="android:layout_marginRight">@dimen/iv_normal_margin</item>
    </style>

    <style name="Quote">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorNormalText</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/tv_large_margin</item>
        <item name="android:layout_marginBottom">@dimen/tv_large_margin</item>
        <item name="android:layout_marginLeft">@dimen/tv_normal_margin</item>
        <item name="android:layout_marginRight">@dimen/tv_normal_margin</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/colorBackgroundLine</item>
    </style>

</resources>
